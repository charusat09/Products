<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.ad_title %> </td>
      </tr>
      <tr>
        <td><%= link_to("Show Ad", {:controller =>'Products' ,:action => 'show', :id => product.id}, :class => "post edit") %></td>
        <td><%= link_to("Edit Ad", {:controller =>'Products' ,:action => 'edit', :id => product.id}, :class => "post edit") %></td>
        <td><%= link_to("Delete Ad", {:controller =>'Products' ,:action => 'destroy', :id => product.id, confirm: 'Are you sure?'}, :class => "post desttroy") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
